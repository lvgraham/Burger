
<div class = 'header'>

  <h1>Burgers!</h1>

</div>
<div id = 'container-fluid'>
  <div class = 'row'>
    <div class = 'newBurgers col-sm'>
      <h2>Burgers that I want to devour:</h2>
      <p>
        {{#each burger}}
          {{#unless devoured}}
            <div class = 'listItem'>{{this.burger_name}}
              <button class="devoured-status btn btn-light" data-id="{{id}}" data-newdevoured="{{devoured}}">NOM NOM</button>
            </div>
          {{/unless}}
        {{/each}}
      </p>
    </div>

    <div class = 'addBurgerForm col-sm'>
      <h2>Enter burger to devour:</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger"Burger name:</label>
          <input type="text" id="burger" name="name">
        </div>
        <button class = 'btn btn-light' type="submit">BURGER TIME</button>
      </form>
    </div>

    <div class = 'devouredBurgers col-sm'>
      <h2>Burgers that I have devoured:</h2>
      <p>
        {{#each burger}}
          {{#if devoured}}
            <div class = 'listItem'>{{this.burger_name}}
              <button class="delete-burger btn btn-light" data-id="{{this.id}}">DELETE</button>
            </div>
          {{/if}}
        {{/each}}
      </p>
    </div>

  </div>
</div>



